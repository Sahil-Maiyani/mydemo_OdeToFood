@model mydemo_OdeToFood.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail of " + Model.Restaurant.Name;
}
<h2>@Model.Restaurant.Name</h2>


@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissable">@Model.Message</div>
}


<div>
    Id: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>


@* List all bookings of restaurants in table *@

@foreach (var booking in Model.Restaurant.Bookings)
{
   <label>Name:</label> @booking.CustomerName; <br/>
}

<a asp-page="./List" class="btn btn-default">All Restaurants</a>