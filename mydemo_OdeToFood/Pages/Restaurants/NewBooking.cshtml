@page "{restaurantId:int}"
@model mydemo_OdeToFood.Pages.Restaurants.NewBookingModel
@using OdeToFood.Core

@{
    ViewData["Title"] = "New Booking";
}

<h2>New Booking</h2>

<div class="row">
    <div class="col-lg-4">
        <form method="post">
            <input type="hidden" asp-for="RestaurantId" />
            <input type="hidden" asp-for="Booking.Id" />
            <div class="form-group">
                <label asp-for="Booking.CustomerName"></label>
                <input asp-for="Booking.CustomerName" class="form-control" />
                <span class="text-danger" asp-validation-for="Booking.CustomerName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Person"></label>
                <input asp-for="Booking.Person" class="form-control" />
                <span class="text-danger" asp-validation-for="Booking.Person"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Time"></label>
                <input type="date" asp-for="Booking.Time" class="form-control text-center"/>
                <span class="text-danger" asp-validation-for="Booking.Time"></span>
            </div>
            <button type="submit" class="btn btn-primary center-block">Book</button>
        </form>
    </div>
    <div class="col-lg-8">
    </div>

</div>